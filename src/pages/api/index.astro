<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Swagger UI</title>

    <style>
      html {
        box-sizing: border-box;
        overflow: -moz-scrollbars-vertical;
        overflow-y: scroll;
      }

      *,
      *:before,
      *:after {
        box-sizing: inherit;
      }

      body {
        margin: 0;
        background: #fafafa;
      }
    </style>
  </head>

  <body>
    <div id="swagger-ui"></div>

    <script>
      import "swagger-ui-dist/swagger-ui.css";
      import "swagger-ui-plugin-enum-names/dist/index.css";

      import {
        SwaggerUIBundle,
        SwaggerUIStandalonePreset,
      } from "swagger-ui-dist";

      import { EnumNamesPlugin } from "swagger-ui-plugin-enum-names";

      window.onload = function () {
        const ui = SwaggerUIBundle({
          url: "https://raw.githubusercontent.com/AzuraCast/AzuraCast/main/web/static/openapi.yml",
          dom_id: "#swagger-ui",
          deepLinking: true,
          withCredentials: true,
          operationsSorter: "alpha",
          presets: [SwaggerUIBundle.presets.apis, SwaggerUIStandalonePreset],
          plugins: [EnumNamesPlugin],
          layout: "StandaloneLayout",
        });

        window.ui = ui;
      };
    </script>
  </body>
</html>
