<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Swagger UI</title>

    <style>
      html {
        box-sizing: border-box;
        overflow: -moz-scrollbars-vertical;
        overflow-y: scroll;
      }

      *,
      *:before,
      *:after {
        box-sizing: inherit;
      }

      body {
        margin: 0;
        background: #fafafa;
      }
    </style>
  </head>

  <body>
    <div id="swagger-ui"></div>

    <script>
      import SwaggerUI from "swagger-ui";
      import "swagger-ui/dist/swagger-ui.css";
      import "swagger-ui-plugin-enum-names/dist/index.css";

      import SwaggerUIStandalonePreset from "swagger-ui/dist/swagger-ui-standalone-preset";
      import { EnumNamesPlugin } from "swagger-ui-plugin-enum-names";

      SwaggerUI({
        url: "https://raw.githubusercontent.com/AzuraCast/AzuraCast/main/web/static/openapi.yml",
        dom_id: "#swagger-ui",
        deepLinking: true,
        presets: [SwaggerUI.presets.apis, SwaggerUIStandalonePreset],
        plugins: [EnumNamesPlugin],
        layout: "StandaloneLayout",
      });
    </script>
  </body>
</html>
